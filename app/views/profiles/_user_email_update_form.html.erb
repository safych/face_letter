<h3><%= t("views.profiles.show.update_user_email") %></h3>
<%= form_with(model: user, url: user_path(user), method: :patch) do |f| %>
  <div class="field">
    <%= f.label :current_password, t("views.profiles.show.current_password") %><br />
    <%= f.password_field :current_password %>
  </div>
  <br />
  <div class="action">
    <%= f.submit t("views.profiles.show.send_letter_to_update_email") %>
  </div>
<% end %>