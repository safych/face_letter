<h3><%= t("views.profiles.show.update_avatar") %></h3>
<%= form_with model: user, url: user_path(user), method: :patch do |f| %>
  <div class="field">
    <%= f.label :avatar, t("views.profiles.show.avatar") %><br />
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :current_password, t("views.profiles.show.current_password") %><br />
    <%= f.password_field :current_password %>
  </div>

  <div class="action">
    <%= f.submit t("views.profiles.show.update") %>
  </div>
<% end %>