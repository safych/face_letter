<h3><%= t("views.profiles.show.password_update_form") %></h3>
<%= form_with model: user, url: user_path(user), method: :patch do |f| %>
  <div class="field">
    <%= f.label :current_password, t("views.profiles.show.current_password") %><br />
    <%= f.password_field :current_password, id: "current-password-update-password-field" %>
  </div>
  
  <div class="field">
    <%= f.label :new_password, t("views.profiles.show.new_password") %><br />
    <%= f.password_field :new_password %>
  </div>
  <br />

  <div class="action">
    <%= f.submit t("views.profiles.show.update") %>
  </div>
<% end %>