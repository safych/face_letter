<h3>Update name and surname</h3>
<%= form_with model: user, url: user_path(user), method: :patch do |f| %>
  <div class="field">
    <%= f.label :name, t("name") %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :surname, t("surname") %>
    <%= f.text_field :surname %>
  </div>

  <div class="field">
    <%= f.label :current_password, t("current_password") %>
    <%= f.password_field :current_password %>
  </div>

  <div class="action">
    <%= f.submit t("update") %>
  </div>
<% end %>