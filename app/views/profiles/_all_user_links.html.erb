<h3><%= t("views.profiles.show.all_urls") %></h3>
<% if @user_links.respond_to?(:each) %>
  <% @user_links.each do |user_link| %>
    <div class="url">
      <h4 style="color: black"><%= user_link.url %></h4>
      <%= link_to t("views.profiles.show.destroy_url"), user_link_path(user_link), data: { turbo_method: :delete, turbo_confirm: t("views.profiles.show.are_you_sure") }, id: "destroy user-link-#{user_link.id}" %><br />
      <%= link_to t("views.profiles.show.update_url"), "#", onclick: "document.getElementById('update-link-form-#{user_link.id}').style.display = 'block'; return false;", id: "update user-link-#{user_link.id}" %>
      <div id="update-link-form-<%= user_link.id %>", style="display: none;">
        <%= render "profiles/user_link_update_form", user_link: user_link %>
      </div>
    </div>
  <% end %>
<% else %>
  <% user_link = @user_links %>
  <div class="url">
    <h4 style="color: black"><%= user_link.url %></h4>
    <%= link_to t("views.profiles.show.destroy_url"), user_link_path(user_link), data: { turbo_method: :delete, turbo_confirm: t("views.profiles.show.are_you_sure") }, id: "destroy user-link-#{user_link.id}" %><br />
    <%= link_to t("views.profiles.show.update_url"), "#", onclick: "document.getElementById('update-link-form-#{user_link.id}').style.display = 'block'; return false;", id: "update user-link-#{user_link.id}" %>
    <div id="update-link-form-<%= user_link.id %>", style="display: none;">
      <%= render "profiles/user_link_update_form", user_link: user_link %>
    </div>
  </div>
<% end %>