<h3>Update password</h3>
<%= form_with model: user, url: user_path(user), method: :patch do |f| %>
  <div class="field">
    <%= f.label :new_password, t("new_password") %>
    <%= f.password_field :new_password %>
  </div>

  <div class="field">
    <%= f.label :current_password, t("current_password") %>
    <%= f.password_field :current_password %>
  </div>

  <div class="action">
    <%= f.submit t("update") %>
  </div>
<% end %>