<h3><%= t("views.profiles.show.update_name_and_surname") %></h3>
<%= form_with model: user, url: user_path(user), method: :patch do |f| %>
  <div class="field">
    <%= f.label :name, t("views.profiles.show.name") %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :surname, t("views.profiles.show.surname") %>
    <%= f.text_field :surname %>
  </div>

  <div class="field">
    <%= f.label :current_password, t("views.profiles.show.current_password") %>
    <%= f.password_field :current_password %>
  </div>

  <div class="action">
    <%= f.submit t("views.profiles.show.update") %>
  </div>
<% end %>