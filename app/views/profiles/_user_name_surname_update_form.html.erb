<h3><%= t("views.profiles.show.update_name_and_surname") %></h3>
<%= form_with model: user, url: user_path(user), method: :patch do |f| %>
  <div class="field">
    <%= f.label :name, t("views.profiles.show.name") %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :surname, t("views.profiles.show.surname") %><br />
    <%= f.text_field :surname %>
  </div>
  <br />

  <div class="action">
    <%= f.submit t("views.profiles.show.update") %>
  </div>
<% end %>