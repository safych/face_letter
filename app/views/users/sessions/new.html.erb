<div class="container">
  <h2><%= t("views.users.sessions.new.log_in") %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <% flash.each do |key, value| %>
      <div style="color:red;">
        <%= value %>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :email, t("views.users.sessions.new.email") %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, t("views.users.sessions.new.password") %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, t("views.users.sessions.new.remember_me") %>
      </div>
    <% end %>

    <div class="field">
      <%= recaptcha_tags %>
    </div>
    <br />

    <div class="actions">
      <%= f.submit t("views.users.sessions.new.log_in"), class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>