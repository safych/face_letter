<div class="container">
  <h2><%= t("views.users.registrations.new.sign_up") %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <% flash.each do |key, value| %>
      <div style="color:red;">
        <%= value %>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :email, t("views.users.registrations.new.email") %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :name, t("views.users.registrations.new.name") %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :surname, t("views.users.registrations.new.surname") %><br />
      <%= f.text_field :surname, autofocus: true, autocomplete: "surname" %>
    </div>

    <div class="field">
      <%= f.label :avatar, t("views.users.registrations.new.avatar") %><br />
      <%= f.file_field :avatar %>
    </div>
    <br />

    <div class="field">
      <%= f.label :password, t("views.users.registrations.new.password") %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t("views.users.registrations.new.characters_minimum") %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t("views.users.registrations.new.password_confirm") %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= flash[:recaptcha_error] %>
      <%= recaptcha_tags %>
    </div>

    <div class="actions">
      <%= f.submit t("views.users.registrations.new.sign_up") %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>