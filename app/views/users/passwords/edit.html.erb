<h2><%= t("views.users.passwords.edit.change_your_password") %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, t("views.users.passwords.edit.new_password") %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> <%= t("views.users.passwords.edit.characters_minimum") %>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t("views.users.passwords.edit.confirm_new_password") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t("views.users.passwords.edit.change_my_password") %>
  </div>
<% end %>

<%= render "users/shared/links" %>
